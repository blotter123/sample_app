source 'https://rubygems.org'

gem 'rails'

gem 'bootstrap-sass'

gem 'bcrypt-ruby', '3.0.1'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end

gem 'annotate', '2.5.0', group: :development
# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
end

group :production do
  gem 'pg'
end

